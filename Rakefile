require 'echoe'

Echoe.new('lightcsv') do |gem|
  gem.author = "とみたまさひろ <tommy@tmtm.org>"
  gem.summary = "A pure Ruby CSV parser"
  gem.description = "A pure Ruby CSV parser wrapped into a gem version for easier install."
  gem.version = "0.2.2"
  gem.url = "http://www.tmtm.org/ruby/lightcsv/"
  gem.rdoc_options = ["--line-numbers", "--inline-source", "--title", "Lightcsv", "--main", "README.txt", "--charset", "utf-8"]
end
